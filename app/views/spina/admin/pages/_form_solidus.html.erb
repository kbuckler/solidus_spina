<div id="solidus" class="tab-content <%= 'active' if @tabs.length == 1%>">
  <div class="horizontal-form">
    <div class="horizontal-form-group">
      <div class="horizontal-form-label">Product</div>
      <div class="horizontal-form-content">
        <% if @page.new_record? %>
          <div class="select-dropdown">
            <%= f.select :spree_product_id, options_for_spree_product_select %>
          </div>
        <% else %>
          <%= @page.solidus_product.name %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if @page.resource %>
  <%= f.hidden_field :resource_id, value: @page.resource.id %>
<% end %>
